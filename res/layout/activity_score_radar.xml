<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_CONTENT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/content_padding" >

    <LinearLayout
        android:id="@+id/layout_TABLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/table_margin"
        android:background="@color/background"
        android:padding="@dimen/table_padding" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_score"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="总分：      " />

            <TextView
                android:id="@+id/score"
                style="@style/text_black_18"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_score"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:text="477" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/table_margin"
        android:background="@color/table_background"
        android:orientation="vertical"
        android:padding="@dimen/table_padding" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/grName1"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="量化指标" />

            <TextView
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/grName1"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="  得分：" />

            <TextView
                android:id="@+id/stNames1"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="99" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/grName2"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="学生自评" />

            <TextView
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/grName2"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="  得分：" />

            <TextView
                android:id="@+id/stNames2"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="90" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/grName3"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="组内评价" />

            <TextView
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/grName3"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="  得分：" />

            <TextView
                android:id="@+id/stNames3"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="97" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/grName4"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="组间评价" />

            <TextView
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/grName4"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="  得分：" />

            <TextView
                android:id="@+id/stNames4"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="92" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/row_height"
            android:background="@drawable/row_selector"
            android:paddingLeft="@dimen/row_padding_left"
            android:paddingRight="@dimen/row_padding_right" >

            <TextView
                android:id="@+id/grName5"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="教师评价" />

            <TextView
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/grName5"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="  得分：" />

            <TextView
                android:id="@+id/stNames5"
                style="@style/text_black_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="99" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_radar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/table_margin"
        android:background="@color/table_background"
        android:padding="@dimen/table_padding" >

        <app.ui.activity.score.CreditScoreView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#108EF2" />
    </LinearLayout>

</LinearLayout>